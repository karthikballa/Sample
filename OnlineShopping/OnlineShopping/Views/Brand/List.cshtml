@model IEnumerable<OnlineShopping.Models.DB.Sp_Brands_Details_Result>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create Brand New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Brand-ID")
        </th>
        <th>
            @Html.DisplayName("Categories ID")
        </th>
        <th>
            @Html.DisplayName("Brand Name")
        </th>
        <th>
            @Html.DisplayName("Brand image")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrandID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriesName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            <img src="@Url.Content("~/Images/"+item.Brandimage)" style=" width:100px; height:100px;"></td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BrandID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.BrandID }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BrandID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
