@model IEnumerable<OnlineShopping.Models.DB.Sp_Item_Details_Result>

@{
    ViewBag.Title = "List";
}

<h2> Item List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>    
        <th>
            @Html.DisplayName("Item ID")
        </th>
        <th>
            @Html.DisplayName("Brand Name")
        </th>
        <th>
            @Html.DisplayName("Item Name")
        </th>
        <th>
            @Html.DisplayName("Item Image")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            <img src="@Url.Content("~/Images/"+item.itemimage)" style=" width:100px; height:100px;">
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new {  id=item.ItemID},new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ItemID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
